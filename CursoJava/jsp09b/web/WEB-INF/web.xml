<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>Controllers.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NosotrosController</servlet-name>
        <servlet-class>Controllers.NosotrosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactoController</servlet-name>
        <servlet-class>Controllers.ContactoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MisionController</servlet-name>
        <servlet-class>Controllers.MisionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/indexcontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NosotrosController</servlet-name>
        <url-pattern>/nosotros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactoController</servlet-name>
        <url-pattern>/contacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MisionController</servlet-name>
        <url-pattern>/mision</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            indexcontroller
        </welcome-file>
    </welcome-file-list>
</web-app>
